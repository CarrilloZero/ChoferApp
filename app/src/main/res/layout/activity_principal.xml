<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="busesapp.choferapp.PrincipalActivity">

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/txtPatente1"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/txtPatente2"
        android:maxLength="2"
        android:inputType="text" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/txtPatente2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:maxLength="2"
        android:inputType="text" />

    <EditText
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/txtPatente3"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/txtPatente2"
        android:maxLength="2"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/patente"
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/txtPatente1"
        android:layout_alignParentStart="false" />

    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="@string/EnviarPatente"
        android:id="@+id/btnEnviar"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="144dp"
        android:onClick="onClickEnviar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/origen"
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/spnOrigen"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/destino"
        android:id="@+id/textView3"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="52dp"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnOrigen"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/txtPatente2"
        android:layout_alignLeft="@+id/txtPatente2"
        android:layout_alignStart="@+id/txtPatente2"
        />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnDestino"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/spnOrigen"
        android:layout_alignStart="@+id/spnOrigen"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@android:drawable/sym_action_chat"
        android:tint="#ff0000"
        android:contentDescription="Comentario" />

    }<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtCorreo"
        android:text="text"
        android:layout_above="@+id/imageButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="45dp" />

</RelativeLayout>
